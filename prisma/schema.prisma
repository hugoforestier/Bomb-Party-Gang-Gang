generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  u_id       BigInt  @id @default(autoincrement())
  u_password String? @db.VarChar
  u_username String  @unique @db.VarChar(30)
  u_salt     String? @db.VarChar
  u_uuid     String  @unique @db.Uuid
  u_status   Boolean
  score      score[]
}

model score {
  s_id           BigInt  @id @default(autoincrement())
  s_highestScore Int     @default(0)
  s_lowestScore  Int     @default(0)
  s_lastScore    Int     @default(0)
  s_nbGames      Int     @default(0)
  u_id           BigInt  @unique
  user           user?   @relation(fields: [u_id], references: [u_id])
}
